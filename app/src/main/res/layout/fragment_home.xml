<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProductFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/img_kuku_app_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_kukuapplogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_home_page_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/home_page_slogan"
        android:textColor="@color/secondaryTextColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_kuku_app_logo"
        app:layout_constraintStart_toStartOf="@+id/img_kuku_app_logo"
        app:layout_constraintTop_toBottomOf="@+id/img_kuku_app_logo" />

    <ImageView
        android:id="@+id/img_broilerChick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:src="@mipmap/ic_broiler_chick_round"
        app:layout_constraintStart_toStartOf="@+id/txt_product_selection_label"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_selection_label" />

    <ImageView
        android:id="@+id/img_layerChick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:src="@mipmap/ic_layer_chick_round"
        app:layout_constraintEnd_toEndOf="@+id/txt_product_selection_label"
        app:layout_constraintStart_toEndOf="@+id/img_broilerChick"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_selection_label" />

    <ImageView
        android:id="@+id/img_eggsInTray"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:src="@mipmap/ic_eggs_in_a_tray_round"
        app:layout_constraintEnd_toEndOf="@+id/img_layerChick"
        app:layout_constraintStart_toStartOf="@+id/img_broilerChick"
        app:layout_constraintTop_toBottomOf="@+id/txt_layer_label" />

    <TextView
        android:id="@+id/txt_broiler_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Broiler Chicks"
        android:textColor="@color/secondaryTextColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/img_broilerChick"
        app:layout_constraintStart_toStartOf="@+id/img_broilerChick"
        app:layout_constraintTop_toBottomOf="@+id/img_broilerChick" />

    <TextView
        android:id="@+id/txt_layer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Layer Chicks"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/img_layerChick"
        app:layout_constraintStart_toStartOf="@+id/img_layerChick"
        app:layout_constraintTop_toBottomOf="@+id/img_layerChick" />

    <TextView
        android:id="@+id/txt_eggs_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Table Eggs"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/img_eggsInTray"
        app:layout_constraintStart_toStartOf="@+id/img_eggsInTray"
        app:layout_constraintTop_toBottomOf="@+id/img_eggsInTray" />

    <TextView
        android:id="@+id/txt_product_selection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Select a product you would like to order:"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/txt_home_page_slogan"
        app:layout_constraintStart_toStartOf="@+id/txt_home_page_slogan"
        app:layout_constraintTop_toBottomOf="@+id/txt_home_page_slogan" />
</androidx.constraintlayout.widget.ConstraintLayout>